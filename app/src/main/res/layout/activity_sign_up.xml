<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".SignUpActivity" android:id="@+id/layout">

    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent"
    >

        <TextView
                android:text="Sign Up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="44dp" android:textSize="30sp" app:layout_constraintHorizontal_bias="0.498"
                android:gravity="center" android:layout_gravity="center"/>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="122dp" app:srcCompat="@drawable/ic_baseline_account_circle_24"
                android:id="@+id/profilepic" android:contentDescription="TODO" tools:ignore="VectorDrawableCompat"
                android:padding="2dp"/>
        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                app:boxCornerRadiusBottomStart="30dp"
                app:boxCornerRadiusBottomEnd="30dp" app:boxCornerRadiusTopEnd="30dp" app:boxCornerRadiusTopStart="30dp"
                app:layout_constraintHorizontal_bias="0.0"

                app:boxStrokeColor="@android:color/transparent"
                android:background="@drawable/edit_box_bg"
                app:boxStrokeWidth="0dp" app:layout_constraintBottom_toTopOf="@+id/RTextboxUsername"
                app:boxStrokeWidthFocused="0dp" app:boxBackgroundColor="#6AFFFFFF">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/RTextboxFName"
                    android:background="@android:color/transparent"
                    android:hint="First Name"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                app:boxCornerRadiusBottomStart="30dp"
                app:boxCornerRadiusBottomEnd="30dp" app:boxCornerRadiusTopEnd="30dp" app:boxCornerRadiusTopStart="30dp"
                app:layout_constraintHorizontal_bias="0.0"

                app:boxStrokeColor="@android:color/transparent"
                android:background="@drawable/edit_box_bg"
                app:boxStrokeWidth="0dp" app:layout_constraintBottom_toTopOf="@+id/RTextboxUsername"
                android:layout_marginTop="24dp" app:boxStrokeWidthFocused="0dp" app:boxBackgroundColor="#6AFFFFFF">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:id="@+id/RTextboxLName"
                    android:hint="Last Name"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                app:boxCornerRadiusBottomStart="30dp"
                app:boxCornerRadiusBottomEnd="30dp" app:boxCornerRadiusTopEnd="30dp" app:boxCornerRadiusTopStart="30dp"
                app:layout_constraintHorizontal_bias="0.0"
                android:background="@drawable/edit_box_bg"

                app:boxStrokeColor="#6AFFFFFF"
                app:boxStrokeWidth="0dp" app:layout_constraintBottom_toTopOf="@+id/RTextboxUsername"
                android:layout_marginTop="24dp" app:boxStrokeWidthFocused="0dp">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:id="@+id/RTextboxUsername"
                    android:hint="Username"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                app:boxCornerRadiusBottomStart="30dp"
                app:boxCornerRadiusBottomEnd="30dp" app:boxCornerRadiusTopEnd="30dp" app:boxCornerRadiusTopStart="30dp"
                app:layout_constraintHorizontal_bias="0.0"
                android:background="@drawable/edit_box_bg"

                app:boxStrokeColor="@android:color/transparent"
                app:boxStrokeWidth="0dp" app:layout_constraintBottom_toTopOf="@+id/RTextboxUsername"
                android:layout_marginTop="24dp" app:boxStrokeWidthFocused="0dp" app:boxBackgroundColor="#9FFFFFFF"
                >

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/RTextboxEmail"
                    android:hint="Email" android:background="@android:color/transparent"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                app:boxCornerRadiusBottomStart="30dp"
                app:boxCornerRadiusBottomEnd="30dp" app:boxCornerRadiusTopEnd="30dp" app:boxCornerRadiusTopStart="30dp"
                app:layout_constraintHorizontal_bias="0.0"
                android:background="@drawable/edit_box_bg"

                app:boxStrokeColor="@android:color/transparent"
                app:boxStrokeWidth="0dp" app:layout_constraintBottom_toTopOf="@+id/RTextboxUsername"
                android:layout_marginTop="24dp" app:boxStrokeWidthFocused="0dp" app:boxBackgroundColor="#6AFFFFFF">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:id="@+id/RTextboxHeadline"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"

                    android:hint="Headline"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                app:boxCornerRadiusBottomStart="30dp"
                app:boxCornerRadiusBottomEnd="30dp" app:boxCornerRadiusTopEnd="30dp" app:boxCornerRadiusTopStart="30dp"
                app:layout_constraintHorizontal_bias="0.0"
                android:background="@drawable/edit_box_bg"

                app:boxStrokeColor="@android:color/transparent"
                app:boxStrokeWidth="0dp" app:layout_constraintBottom_toTopOf="@+id/RTextboxUsername"
                android:layout_marginTop="24dp" app:boxStrokeWidthFocused="0dp" app:boxBackgroundColor="#5CFFFFFF">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:id="@+id/RTextboxAboutme"
                    android:background="@android:color/transparent"

                    android:layout_height="wrap_content"
                    android:hint="About me"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                app:boxCornerRadiusBottomStart="30dp"
                app:boxCornerRadiusBottomEnd="30dp" app:boxCornerRadiusTopEnd="30dp" app:boxCornerRadiusTopStart="30dp"
                app:layout_constraintHorizontal_bias="0.0"
                android:background="@drawable/edit_box_bg"

                app:boxStrokeColor="@android:color/transparent"
                app:boxStrokeWidth="0dp" app:layout_constraintBottom_toTopOf="@+id/RTextboxUsername"
                android:layout_marginTop="24dp" app:boxStrokeWidthFocused="0dp" app:boxBackgroundColor="#6AFFFFFF">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:id="@+id/RTextboxLocality"
                    android:background="@android:color/transparent"

                    android:layout_height="wrap_content"
                    android:hint="Locality"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                app:boxCornerRadiusBottomStart="30dp"
                app:boxCornerRadiusBottomEnd="30dp" app:boxCornerRadiusTopEnd="30dp" app:boxCornerRadiusTopStart="30dp"
                app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/textInputLayout"
                android:layout_marginTop="24dp"
                android:background="@drawable/edit_box_bg"
                app:boxStrokeWidth="0dp" app:passwordToggleDrawable="@android:drawable/ic_lock_idle_lock"
                app:passwordToggleTintMode="src_atop" app:passwordToggleEnabled="true" app:passwordToggleTint="#000000"
                app:boxStrokeColor="@android:color/transparent" app:boxStrokeWidthFocused="0dp"
                app:boxBackgroundColor="#6AFFFFFF">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"

                    android:id="@+id/RTextboxPassword"
                    android:hint="Password" android:password="true"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                app:boxCornerRadiusBottomStart="30dp"
                app:boxCornerRadiusBottomEnd="30dp" app:boxCornerRadiusTopEnd="30dp" app:boxCornerRadiusTopStart="30dp"
                app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/textInputLayout"
                android:layout_marginTop="24dp"
                android:background="@drawable/edit_box_bg"
                app:boxStrokeWidth="0dp" app:passwordToggleDrawable="@android:drawable/ic_lock_idle_lock"
                app:passwordToggleTintMode="src_atop" app:passwordToggleEnabled="true" app:passwordToggleTint="#000000"
                app:boxStrokeColor="@android:color/transparent" app:boxStrokeWidthFocused="0dp"
                app:boxBackgroundColor="#6AFFFFFF">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"

                    android:id="@+id/RTextboxCPassword"
                    android:hint="Confirm Password" android:password="true"/>
        </com.google.android.material.textfield.TextInputLayout>


        <Button
                android:text="Sign Up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/RegisterBtn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.501"
                android:background="@drawable/button_bg"
                android:layout_marginBottom="44dp" app:layout_constraintBottom_toTopOf="@+id/gotoLogin"
                android:gravity="center" android:layout_gravity="center" android:layout_marginTop="24dp"/>
        <TextView
                android:text="Already have an account? | Login here!"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/gotoLogin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.497" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_gravity="center" android:layout_marginBottom="44dp"/>

    </LinearLayout>
</ScrollView>