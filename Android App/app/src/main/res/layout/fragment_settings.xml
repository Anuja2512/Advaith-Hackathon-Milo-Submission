<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".SettingsFragment">
    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
        <TextView
                android:text="Settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="44dp" android:textSize="30sp" app:layout_constraintHorizontal_bias="0.498"
                android:gravity="center" android:layout_gravity="center"/>
        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="122dp"
                android:layout_height="122dp" app:srcCompat="@drawable/ic_baseline_account_circle_24"
                android:id="@+id/profilepic" android:contentDescription="TODO" tools:ignore="VectorDrawableCompat"
                android:padding="10dp" android:layout_gravity="center_horizontal" android:layout_margin="3dp"/>
        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                app:boxCornerRadiusBottomStart="30dp"
                android:background="@drawable/edit_box_bg"
                app:boxCornerRadiusBottomEnd="30dp" app:boxCornerRadiusTopEnd="30dp" app:boxCornerRadiusTopStart="30dp"
                app:boxStrokeColor="@android:color/transparent"
                app:boxStrokeWidth="0dp" app:layout_constraintBottom_toTopOf="@+id/RTextboxUsername"
                app:boxStrokeWidthFocused="0dp">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:id="@+id/fname"
                    android:hint="First Name"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:background="@drawable/edit_box_bg"
                app:boxCornerRadiusBottomStart="30dp"
                app:boxCornerRadiusBottomEnd="30dp" app:boxCornerRadiusTopEnd="30dp" app:boxCornerRadiusTopStart="30dp"
                app:layout_constraintHorizontal_bias="0.0"

                app:boxStrokeColor="@android:color/transparent"
                app:boxStrokeWidth="0dp" app:layout_constraintBottom_toTopOf="@+id/RTextboxUsername"
                android:layout_marginTop="24dp" app:boxStrokeWidthFocused="0dp">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lname"
                    android:background="@android:color/transparent"
                    android:hint="Last Name"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:background="@drawable/edit_box_bg"
                app:boxCornerRadiusBottomStart="30dp"
                app:boxCornerRadiusBottomEnd="30dp" app:boxCornerRadiusTopEnd="30dp" app:boxCornerRadiusTopStart="30dp"
                app:boxStrokeColor="@android:color/transparent"
                app:boxStrokeWidth="0dp" app:layout_constraintBottom_toTopOf="@+id/RTextboxUsername"
                android:layout_marginTop="24dp" app:boxStrokeWidthFocused="0dp">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/fusername"
                    android:background="@android:color/transparent"
                    android:hint="Username"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:background="@drawable/edit_box_bg"
                app:boxCornerRadiusBottomStart="30dp"
                app:boxCornerRadiusBottomEnd="30dp" app:boxCornerRadiusTopEnd="30dp" app:boxCornerRadiusTopStart="30dp"
                app:boxStrokeColor="@android:color/transparent"
                app:boxStrokeWidth="0dp" app:layout_constraintBottom_toTopOf="@+id/RTextboxUsername"
                android:layout_marginTop="24dp" app:boxStrokeWidthFocused="0dp">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:id="@+id/femail"
                    android:hint="Email"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                app:boxCornerRadiusBottomStart="30dp"
                android:background="@drawable/edit_box_bg"
                app:boxCornerRadiusBottomEnd="30dp" app:boxCornerRadiusTopEnd="30dp" app:boxCornerRadiusTopStart="30dp"
                app:layout_constraintHorizontal_bias="0.0"

                app:boxStrokeColor="@android:color/transparent"
                app:boxStrokeWidth="0dp" app:layout_constraintBottom_toTopOf="@+id/RTextboxUsername"
                android:layout_marginTop="24dp" app:boxStrokeWidthFocused="0dp">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:id="@+id/fheadline"
                    android:background="@android:color/transparent"
                    android:layout_height="wrap_content"
                    android:hint="Headline"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:background="@drawable/edit_box_bg"
                app:boxCornerRadiusBottomStart="30dp"
                app:boxCornerRadiusBottomEnd="30dp" app:boxCornerRadiusTopEnd="30dp" app:boxCornerRadiusTopStart="30dp"
                app:layout_constraintHorizontal_bias="0.0"

                app:boxStrokeColor="@android:color/transparent"
                app:boxStrokeWidth="0dp" app:layout_constraintBottom_toTopOf="@+id/RTextboxUsername"
                android:layout_marginTop="24dp" app:boxStrokeWidthFocused="0dp">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:id="@+id/faboutme"
                    android:background="@android:color/transparent"
                    android:layout_height="wrap_content"
                    android:hint="About me"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:background="@drawable/edit_box_bg"
                app:boxCornerRadiusBottomStart="30dp"
                app:boxCornerRadiusBottomEnd="30dp" app:boxCornerRadiusTopEnd="30dp" app:boxCornerRadiusTopStart="30dp"
                app:layout_constraintHorizontal_bias="0.0"

                app:boxStrokeColor="@android:color/transparent"
                app:boxStrokeWidth="0dp" app:layout_constraintBottom_toTopOf="@+id/RTextboxUsername"
                android:layout_marginTop="24dp" app:boxStrokeWidthFocused="0dp">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:id="@+id/flocality"
                    android:background="@android:color/transparent"
                    android:layout_height="wrap_content"
                    android:hint="Locality"/>
        </com.google.android.material.textfield.TextInputLayout>


        <Button
                android:text="Update Profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/updateprofilebtn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/button_bg"
                app:layout_constraintHorizontal_bias="0.501"
                android:layout_marginBottom="44dp" app:layout_constraintBottom_toTopOf="@+id/gotoLogin"
                android:gravity="center" android:layout_gravity="center" android:layout_marginTop="24dp"/>

    </LinearLayout>
</ScrollView>